generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String       @id @default(uuid())
  username   String       @db.VarChar(25)
  email      String
  password   String
  favourites Favourites[]

  @@map(name: "user")
}

model Favourites {
  id          String   @id @default(uuid())
  name        String
  userId      String
  dateCreated DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id])

  @@map(name: "favourites")
}
